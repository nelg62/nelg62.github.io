---
import { Card as ShadcnCard } from "./ui/card";

interface Props {
  as?: string;
  class?: string;
  href: string;
  heading: string;
  subheading: string;
  imagePath: string;
  altText: string;
}

const {
  as: Tag = "a",
  class: className,
  href,
  heading,
  subheading,
  imagePath,
  altText,
} = Astro.props;
---

<Tag target="_blank" href={href} class={`${className}`}
  ><ShadcnCard
    className={`transfor-y-[-40%] align-start perspective-1200 group relative flex-none transform justify-start overflow-hidden shadow-lg transition duration-75 ease-in-out ${href ? "cursor-pointer hover:border-primary" : ""}`}
    ><img
      src={imagePath}
      alt={altText}
      class="h-48 w-full rounded-bl-none rounded-br-none object-contain"
      loading="eager"
    /><div class="flex flex-col gap-y-0.5 px-5 py-4">
      <h1 class="text-lg font-medium">{heading}</h1><h2
        class="text-muted-foreground"
      >
        {subheading}
      </h2>
    </div>
    <slot /></ShadcnCard
  ></Tag
>
